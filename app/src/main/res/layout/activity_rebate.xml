<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_gravity="center"
            android:src="@mipmap/all_arrow_unlike_press" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返利日历"
            android:layout_centerInParent="true"
            android:textColor="@color/c333333"
            android:textSize="@dimen/x33"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:gravity="center"
        android:background="@color/cC20000"
        android:text="2017年5月"
        android:textColor="@color/cffffff" />

    <com.othershe.calendarview.WeekView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/cC20000" />

    <com.othershe.calendarview.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/t24" />

</LinearLayout>
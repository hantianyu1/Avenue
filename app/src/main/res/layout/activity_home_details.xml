<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:src="@mipmap/wx" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:src="@mipmap/fenxiang" />

            <ImageView
                android:id="@+id/img_home_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x360"
                android:src="@mipmap/ic_login_invisible" />

            <TextView
                android:id="@+id/txt_details_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_home_details"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:text="@string/text_details_4"
                android:textColor="@color/c333333"

                android:textSize="@dimen/t28" />

            <RelativeLayout
                android:id="@+id/ratingBar"
                android:layout_width="@dimen/x158"
                android:layout_height="@dimen/x28"
                android:layout_below="@id/txt_details_1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30">

                <RatingBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numStars="5"
                    android:rating="1.5" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_details_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ratingBar"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/ratingBar"
                android:text="@string/text_details_2"
                android:textColor="@color/c999999"
                android:textSize="@dimen/t24" />

            <TextView
                android:id="@+id/text_details_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ratingBar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:text="@string/text_details_3"
                android:textColor="@color/C20000"
                android:textSize="@dimen/t36" />

            <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_below="@id/ratingBar"
                android:layout_marginTop="@dimen/x64">

                <ImageView
                    android:id="@+id/img_details_weizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@mipmap/fujindingwei" />

                <TextView

                    android:id="@+id/text_details_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_toRightOf="@id/img_details_weizhi"
                    android:text="@string/text_details_4" />

            </RelativeLayout>
            <View
                android:id="@+id/view_details2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/rlayout"
                android:background="@color/c000000"></View>


            <RelativeLayout
                android:id="@+id/rlayout5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x280"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rlayout">

                <RelativeLayout
                    android:id="@+id/rlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/fujindingwei" />

                    <TextView
                        android:id="@+id/txt_details_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@id/imageView3"
                        android:text="@string/text_details_5" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/xiala" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:layout_below="@id/rlayout1">

                    <ImageView
                        android:id="@+id/imageView5"

                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/t24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/lirentubiao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@id/imageView5"
                        android:text="@string/text_details_6"
                        android:textSize="@dimen/t24" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:layout_below="@id/rlayout2">

                    <ImageView
                        android:id="@+id/imageView6"

                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/t24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/meishitubiao" />

                    <TextView
                        android:id="@+id/text_details_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@id/imageView6"
                        android:text="@string/text_details_7"
                        android:textSize="@dimen/t24" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/text_details_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x20"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="@string/text_details_8" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_details3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:layout_below="@id/rlayout6"
                    android:background="@color/c000000"></View>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutl"

            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x20">

            <TextView
                android:id="@+id/text_details_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_details_9"
                android:textSize="@dimen/t24"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <View
                android:id="@+id/view_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_below="@id/text_details_9"
                android:layout_marginTop="@dimen/x26"
                android:background="@color/c000000"></View>

            <RelativeLayout
                android:id="@+id/rlayout7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"

                android:layout_below="@id/view_details">

                <TextView
                    android:id="@+id/text_details_10"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_details_10"
                    android:textColor="@color/c666666"
                    android:textSize="@dimen/t24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text_details_10"
                    android:text="@string/text_details_11" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_below="@id/rlayout7"
                android:layout_marginLeft="@dimen/x30">

                <ImageView
                    android:id="@id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wuxianwang" />

                <TextView
                    android:id="@+id/text_details_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@id/imageView6"
                    android:text="@string/text_details_12" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/x26"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x60"

                    android:layout_toRightOf="@id/text_details_11"
                    android:src="@mipmap/tingche" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x22"

                    android:layout_toRightOf="@id/imageView7"
                    android:text="@string/text_details_13"
                    android:textSize="@dimen/t24" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>

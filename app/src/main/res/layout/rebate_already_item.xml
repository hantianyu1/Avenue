<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/t30"
        android:background="@color/C20000">

        <TextView
            android:id="@+id/txt_already_a"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />


        <TextView
            android:id="@+id/txt_already_calander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x30"
            android:text="2017年6月21日"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/t36"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="已返利:"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/txt_already_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_already"
            android:text="400.00"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:textSize="@dimen/x36" />


        <TextView
            android:id="@+id/txt_already_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_already_price"
            android:text="元"
            android:gravity="center"
            android:textSize="@dimen/x28" />

        <TextView
            android:layout_toRightOf="@id/txt_already_money"
            android:id="@+id/shidao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实到:"
            android:layout_marginLeft="@dimen/x182"
            android:gravity="center"
            android:textSize="@dimen/x28" />


        <TextView
            android:id="@+id/shidao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao"
            android:text="320.00"
            android:gravity="center_horizontal"
            android:textColor="@color/cC20000"
            android:textSize="@dimen/x36" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao_price"
            android:text="元"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:layout_marginRight="@dimen/t30"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="代缴税:"
            android:textColor="@color/c999999"
            android:textSize="@dimen/x22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao"
            android:text="80.00"
            android:textColor="@color/c999999"
            android:textSize="@dimen/x22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao_price"
            android:text="元"
            android:textColor="@color/c999999"
            android:textSize="@dimen/x22" />
    </LinearLayout>

</LinearLayout>

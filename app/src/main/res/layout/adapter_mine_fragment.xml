<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:paddingBottom="@dimen/x65"
        android:paddingTop="@dimen/x65"
        android:text="@string/xinyonghu"
        android:textColor="@color/c333333"
        android:textSize="@dimen/t28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <ImageView
        android:id="@+id/img_item_minefragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x65"
        android:layout_marginRight="@dimen/x30"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/gengduo" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/C20000">

            <TextView
                android:id="@+id/txt_a"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center"
                android:textColor="@color/cffffff"
                android:textSize="@dimen/x22" />


            <TextView
                android:id="@+id/txt_calander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_centerInParent="true"
                android:textColor="@color/cffffff"
                android:textSize="@dimen/x22" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/ic_huawei_login_normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:text="现有"
                android:textColor="@color/c333333"
                android:textSize="@dimen/x28" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:text="50.00"
                android:textColor="@color/C20000"
                android:textSize="@dimen/x24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:text="有便宜不占，和咸鱼有什么区别？"
                android:textColor="@color/c999999"
                android:textSize="@dimen/x22" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/gengduo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
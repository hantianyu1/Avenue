<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cFFF9F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cffffff"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"

            android:background="@mipmap/wx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textSize="@dimen/x40" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x532"
        android:layout_marginTop="@dimen/x40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:background="@color/cffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x46"
                android:layout_marginLeft="@dimen/x30"
                android:background="@mipmap/shouji" />

            <EditText
                android:id="@+id/edt_forget_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/c999999"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x130"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/cffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@mipmap/yanzhengma" />

                <EditText
                    android:id="@+id/edt_forget_verify"

                    android:layout_width="@dimen/x400"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/x28" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rbtn_forget_gaincode"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/x88"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/x550"
                android:layout_marginTop="@dimen/x21"
                android:button="@null"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/c999999"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:layout_marginTop="@dimen/x4"
            android:background="@color/cffffff"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/newpassworld_image"
                android:layout_width="@dimen/x42"
                android:layout_height="@dimen/x42"
                android:layout_marginLeft="@dimen/x30"
                android:background="@mipmap/mima" />

            <EditText
                android:id="@+id/edt_forget_out_password"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/newpassworld_image"
                android:background="@null"
                android:hint="请输入新密码"
                android:textColor="@color/c999999"
                android:textSize="@dimen/x28" />

            <ImageView
                android:id="@+id/img_forget_hindpassword"
                android:layout_width="@dimen/x46"
                android:layout_height="@dimen/x30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/keji" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            android:layout_marginTop="@dimen/x4"
            android:background="@color/cffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x42"
                android:layout_height="@dimen/x42"
                android:layout_marginLeft="@dimen/x30"
                android:background="@mipmap/mima" />

            <EditText
                android:id="@+id/edt_forget_confim_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:background="@null"
                android:hint="确认密码"
                android:textColor="@color/c999999"
                android:textSize="@dimen/x28" />
            <!--android:inputType="numberPassword"-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x70"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbtn_forget_reset_password"

            android:layout_width="@dimen/x690"
            android:layout_height="@dimen/x88"
            android:background="@color/cffffff"
            android:button="@null"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@color/cFFFC0410"
            android:textSize="@dimen/x28" />
    </LinearLayout>

</LinearLayout>

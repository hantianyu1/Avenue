<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/t30"
        android:background="@color/C20000">

        <TextView
            android:id="@+id/txt_wait_a"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />


        <TextView
            android:id="@+id/txt_wait_calander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x30"
            android:text="2017年6月21日"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:layout_marginRight="@dimen/t30"
        android:layout_marginTop="@dimen/t36"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shidao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x182"
            android:text="待返利:"
            android:textSize="@dimen/x28" />


        <TextView
            android:id="@+id/wait_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/shidao"
            android:text="400.0"
            android:textColor="@color/cC20000"
            android:textSize="@dimen/x36" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/shidao_price"
            android:text="元"
            android:textColor="@color/c333333"
            android:textSize="@dimen/x28" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/t30"
        android:background="@color/C20000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x30"
            android:text="2017年6月21日"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/x22" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:layout_marginRight="@dimen/t30"
        android:layout_marginTop="@dimen/t36"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x182"
            android:layout_gravity="center"
            android:text="待返利:"
            android:textSize="@dimen/x28" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao"
            android:layout_gravity="center"
            android:text="320.0"
            android:textColor="@color/cC20000"
            android:textSize="@dimen/x36" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shidao_price"
            android:layout_gravity="center"
            android:text="元"
            android:textColor="@color/c333333"
            android:textSize="@dimen/x28" />
    </LinearLayout>
</LinearLayout>

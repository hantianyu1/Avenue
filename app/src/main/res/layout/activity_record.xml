<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/txt_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_gravity="center"
            android:src="@mipmap/all_arrow_unlike_press" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="记录查询"
            android:textColor="@color/c333333"
            android:textSize="@dimen/x33" />
    </RelativeLayout>

    <RadioGroup
        android:layout_below="@id/txt_relative"
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_record"
            android:layout_width="0dp"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/t22"
            android:layout_weight="1"
            android:background="@drawable/rebate_drawable"
            android:button="@null"
            android:gravity="center"
            android:text="积分记录"
            android:checked="true"
            android:textColor="@drawable/rebate_back"
            android:textSize="@dimen/t28" />

        <RadioButton
            android:id="@+id/radio_already"
            android:layout_width="0dp"
            android:layout_height="@dimen/x88"
            android:layout_weight="1"
            android:background="@drawable/rebate_drawable"
            android:button="@null"
            android:gravity="center"
            android:text="已返利"
            android:textColor="@drawable/rebate_back"
            android:textSize="@dimen/t28" />

        <RadioButton
            android:id="@+id/radio_wait"
            android:layout_width="0dp"
            android:layout_height="@dimen/x88"
            android:layout_weight="1"
            android:background="@drawable/rebate_drawable"
            android:button="@null"
            android:gravity="center"
            android:text="待返利"
            android:textColor="@drawable/rebate_back"
            android:textSize="@dimen/t28" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/record_frame"
        android:layout_below="@id/radio_group"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>

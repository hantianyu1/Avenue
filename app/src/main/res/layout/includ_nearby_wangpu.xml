<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="238dp"
    android:background="@color/cffffff"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/x20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x126"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x20"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="附 近 旺 铺"
                android:gravity="center_horizontal"
                android:textSize="@dimen/x36"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/x20"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="@dimen/x62"
                    android:layout_height="@dimen/x1"
                    android:background="#999999"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超人气美食推荐"
                    android:textColor="#999999"
                    android:textSize="@dimen/x22"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"/>
                <TextView

                    android:layout_width="@dimen/x62"
                    android:layout_height="@dimen/x1"
                    android:background="#999999"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_login_visible"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30">
        <LinearLayout
            android:layout_width="@dimen/x224"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/x20"
            >
            <ImageView
                android:layout_width="@dimen/x224"
                android:layout_height="@dimen/x218"
                android:src="@mipmap/ic_login_visible"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小可爱西点"
                android:textSize="@dimen/x28"
                android:layout_marginTop="@dimen/x14"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[安贞门]"
                android:textSize="@dimen/x22"
                android:layout_marginTop="@dimen/x15"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/x224"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/x20"
            >
            <ImageView
                android:layout_width="@dimen/x224"
                android:layout_height="@dimen/x218"
                android:src="@drawable/ic_login_visible"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小可爱西点"
                android:textSize="@dimen/x28"
                android:layout_marginTop="@dimen/x14"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[安贞门]"
                android:textSize="@dimen/x22"
                android:layout_marginTop="@dimen/x15"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/x224"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="@dimen/x224"
                android:layout_height="@dimen/x218"
                android:src="@drawable/ic_login_visible"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小可爱西点"
                android:textSize="@dimen/x28"
                android:layout_marginTop="@dimen/x14"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[安贞门]"
                android:textSize="@dimen/x22"
                android:layout_marginTop="@dimen/x15"
                android:textColor="#999999"/>
        </LinearLayout>

    </LinearLayout>

        
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x37"
        android:layout_marginLeft="@dimen/x30"
        android:layout_height="match_parent">
<ImageView
    android:id="@+id/main_grid_item_image"

    android:layout_width="@dimen/x83"
    android:layout_height="@dimen/x83"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/main_grid_item_text"
        android:layout_width="wrap_content"
        android:textSize="@dimen/t22"
        android:textColor="@color/c666666"
        android:text="美食"

        android:layout_height="wrap_content"

        android:layout_below="@+id/main_grid_item_image"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
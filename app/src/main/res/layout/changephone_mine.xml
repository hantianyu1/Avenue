<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cFFF9F5F5"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/cffffff"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/wx"
            android:layout_marginLeft="@dimen/x30"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换手机号"
                android:textSize="@dimen/x40"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/cffffff"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x20"
        >
        <EditText
            android:id="@+id/edt_chang_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请重新输入手机号"
            android:textSize="@dimen/x28"
            android:layout_marginLeft="@dimen/x30"
            android:background="@null"
            android:textColorHint="@color/c999999"
            android:layout_alignTop="@+id/radioButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <RadioButton
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x46"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@mipmap/shouji"
            android:button="@null"
            android:id="@+id/radioButton" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x88"
            android:layout_weight="2"
            android:background="@color/cffffff"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/edt_chang_verification"

                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:textColorHint="@color/c999999"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x88"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/cffffff"

            >
            <RadioButton
                android:id="@+id/rbtn_chang_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textSize="@dimen/x28"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/c333333"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x70"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/rbtn_chang_confirm"
            android:layout_width="@dimen/x690"
            android:layout_height="@dimen/x88"
            android:background="@color/cffffff"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/x28"
            android:textColor="@color/cFFFC0410"
            android:text="确定"
            /></LinearLayout>
</LinearLayout>
